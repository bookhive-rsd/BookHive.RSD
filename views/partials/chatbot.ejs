<div class="chatbot-wrapper">
    <button id="chatbot-toggle-btn" class="chatbot-toggle-btn" title="Open BookHive AI Assistant">
        <i class="fas fa-robot"></i>
    </button>

    <div id="chatbot-container" class="chatbot-container">
        <div id="chatbot-header" class="chatbot-header">
            <span>BookHive AI Assistant</span>
            <button id="chatbot-close-btn" class="chatbot-close-btn" title="Close Chat">&times;</button>
        </div>

        <div id="chatbot-body" class="chatbot-body">
            <div class="chat-message bot">
                <p>Hello! I'm the BookHive AI. How can I help you find books, news, or other information today?</p>
            </div>
        </div>

        <div id="chatbot-input-container" class="chatbot-input-container">
            <input type="text" id="chatbot-input" placeholder="Ask about books, news..." autocomplete="off">
            <button id="chatbot-send-btn" title="Send Message">Send</button>
        </div>
    </div>
</div>

<!-- Feedback Modal -->
<div id="feedback-modal" class="feedback-modal" style="display: none;">
    <div class="feedback-modal-content">
        <span class="feedback-modal-close">&times;</span>
        <h3>ðŸ“¢ Tell us what you think</h3>
        <p>Was this response helpful?</p>
        
        <div class="feedback-buttons">
            <button class="feedback-btn feedback-helpful" data-feedback="helpful">
                <i class="fas fa-thumbs-up"></i> Helpful
            </button>
            <button class="feedback-btn feedback-incorrect" data-feedback="incorrect">
                <i class="fas fa-times"></i> Incorrect
            </button>
            <button class="feedback-btn feedback-irrelevant" data-feedback="irrelevant">
                <i class="fas fa-circle-notch"></i> Irrelevant
            </button>
            <button class="feedback-btn feedback-unclear" data-feedback="unclear">
                <i class="fas fa-question"></i> Unclear
            </button>
        </div>
        
        <textarea id="feedback-text" placeholder="Additional comments (optional)..." maxlength="500"></textarea>
        <button id="feedback-submit-btn" class="feedback-submit-btn">Submit Feedback</button>
    </div>
</div>