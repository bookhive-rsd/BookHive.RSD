    // Translation Functions
    async function translateText(text, targetLanguage) {
      // Check cache first
      const cacheKey = `${text}|${targetLanguage}`;
      if (translationCache.has(cacheKey)) {
        return translationCache.get(cacheKey);
      }

      try {
        const response = await fetch(`${GEMINI_API_URL}?key=${GEMINI_API_KEY}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            contents: [{
              parts: [{
                text: `Translate the following text to ${languageNames[targetLanguage] || targetLanguage}. Only return the translated text without any additional comments or explanations:\n\n${text}`
              }]
            }]
          })
        });

        if (!response.ok) {
          throw new Error(`Translation API error: ${response.status}`);
        }

        const data = await response.json();
        const translatedText = data.candidates[0]?.content?.parts[0]?.text?.trim();
        
        if (translatedText) {
          // Cache the translation
          translationCache.set(cacheKey, translatedText);
          return translatedText;
        } else {
          throw new Error('No translation received');
        }
      } catch (error) {
        console.error('Translation error:', error);
        return null;
      }
    }

    async function translateMessage(messageElement, targetLanguage) {
      const originalText = messageElement.dataset.originalText || messageElement.querySelector('.message-content').textContent;
      const contentElement = messageElement.querySelector('.message-content');
      
      // Show loading state
      const loadingIndicator = document.createElement('div');
      loadingIndicator.className = 'translation-indicator loading-translation';
      loadingIndicator.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Translating...';
      messageElement.appendChild(loadingIndicator);
      
      try {
        const translatedText = await translateText(originalText, targetLanguage);
        
        if (translatedText) {
          const isReplaceMode = !!localStorage.getItem('bookhive_default_language');
          const indicator = document.createElement('div');
          indicator.className = 'translation-indicator';
          indicator.innerHTML = `<i class="fas fa-language"></i> Translated to ${languageNames[targetLanguage] || targetLanguage}`;

          if (isReplaceMode) {
            contentElement.textContent = translatedText;
            contentElement.parentNode.insertBefore(indicator, contentElement.nextSibling);
          } else {
            contentElement.classList.add('original-text');
            const translatedDiv = document.createElement('div');
            translatedDiv.className = 'translated-text';
            translatedDiv.textContent = translatedText;
            contentElement.parentNode.insertBefore(translatedDiv, contentElement.nextSibling);
            translatedDiv.appendChild(indicator);
          }
          
          messageElement.dataset.translated = 'true';
          messageElement.dataset.translatedTo = targetLanguage;
        }
      } catch (error) {
        console.error('Translation failed:', error);
        showNotification('Translation failed. Please try again.', 'error');
      } finally {
        loadingIndicator.remove();
      }
    }

